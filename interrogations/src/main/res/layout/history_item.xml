<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img"
            fresco:roundAsCircle="true"
            android:layout_marginLeft="20dp"
            android:layout_width="70dp"
            app:progressBarImage="@drawable/loading_01"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@+id/img"
            android:text="@string/people_interrogation"
            android:textColor="@color/darkAsh_Que"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/people"
            android:textColor="@color/darkAsh_Que"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/people"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img"
            android:text="@string/time_interrogation"
            android:textColor="@color/darkAsh_Que"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/people"
            android:textColor="@color/darkAsh_Que"
            android:textSize="12sp" />
        <!--aaaa-->

        <Button
            android:id="@+id/record"
            android:layout_width="84dp"
            android:layout_height="34dp"
            android:layout_below="@+id/time"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img"
            android:background="@drawable/blue_comment_shape"
            android:text="@string/record_interrogation"
            android:textColor="@color/write_Que"
            android:textSize="12sp" />

        <Button
            android:id="@+id/comment"
            android:layout_width="58dp"
            android:layout_height="34dp"
            android:layout_below="@+id/date"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/record"
            android:background="@drawable/blue_comment_shape"
            android:text="@string/comment_interrogation"
            android:textColor="@color/write_Que"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>