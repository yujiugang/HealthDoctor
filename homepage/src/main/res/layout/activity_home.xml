<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".view.activity.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="主要业务"
            android:textColor="#3087ea"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="38dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/common_nav_message_black_n" />

        <ImageView
            android:id="@+id/interrogation"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="76dp"
            android:src="@mipmap/inquiry_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/interrogation"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/doctor" />

        <TextView
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/interrogation"
            android:layout_alignParentRight="true"
            android:layout_marginTop="38dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="19dp"
            android:background="@mipmap/tip_box"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:text="问诊"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/interrogation"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/promise_bg" />

        <TextView
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/question"
            android:layout_alignParentRight="true"
            android:layout_marginTop="38dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="19dp"
            android:background="@mipmap/tip_box"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:text="答疑"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="我的信息"
            android:textColor="#3087ea"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/mine"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/question"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="66dp"
            android:src="@mipmap/my_information_bg" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headPic"
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:layout_alignTop="@+id/mine"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_img_shape"
            android:src="@mipmap/doctor_avatar" />


        <TextView
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/headPic"
            android:layout_alignParentRight="true"
            android:layout_marginTop="38dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/tip_box"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:text="管理"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mine"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/headPic"
            android:text="曾小贤"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/headPic"
            android:text="广东省妇幼保健医院"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/headPic"
            android:text="副主任医师"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/position"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/headPic"
            android:text="小川科"
            android:textColor="#666666"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>