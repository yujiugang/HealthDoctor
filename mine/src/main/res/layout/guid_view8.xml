<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            android:text="@string/set_Image_Photos"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="360dp"
            android:orientation="vertical"
            android:layout_below="@+id/setImageText"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/customPhotoPop"
                android:layout_marginTop="38dp"
                android:background="@mipmap/my_icon_camera_n"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/custom_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/the_one_and_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <ImageView
                android:layout_marginTop="38dp"
                android:background="@mipmap/according_to_the_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/setFinishBut8"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_shape"
                android:text="@string/finishSet"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>